# MLB Statistics Analysis System - Environment Configuration
# Copy this file to .env and configure for your environment

# ===========================
# AI Configuration
# ===========================

# OpenAI API Key (optional - only needed if using OpenAI provider)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (optional - for local FREE AI)
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# AI Provider: "auto" (try Ollama first, fallback to OpenAI), "ollama", or "openai"
AI_PROVIDER=auto

# AI Model to use
# Ollama models: llama3.2, mistral, codellama, etc.
# OpenAI models: gpt-4, gpt-3.5-turbo
AI_MODEL=llama3.2

# ===========================
# MLB API Configuration
# ===========================

# MLB Stats API Base URL (usually no need to change)
MLB_API_BASE_URL=https://statsapi.mlb.com/api/v1

# Cache TTL in hours (24 = refresh daily for current season)
CACHE_TTL_HOURS=24

# API Request Timeout in seconds
API_TIMEOUT_SECONDS=10

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# ===========================
# Application Settings
# ===========================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=false

# Log file path (if ENABLE_FILE_LOGGING=true)
LOG_FILE_PATH=logs/mlb_stats.log

# ===========================
# Cache Configuration
# ===========================

# Cache directory
CACHE_DIR=data/cache

# AI Code Cache directory
AI_CACHE_DIR=data/ai_code_cache

# AI Cache TTL in days
AI_CACHE_TTL_DAYS=30

# ===========================
# Performance & Monitoring
# ===========================

# Enable performance metrics (true/false)
ENABLE_METRICS=false

# Enable query timing logs (true/false)
ENABLE_TIMING_LOGS=true

# Sentry DSN for error monitoring (optional - get from sentry.io)
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ===========================
# Security
# ===========================

# Enable AI code security validation (true/false)
ENABLE_AI_SECURITY_CHECKS=true

# Maximum AI code execution time in seconds
MAX_AI_EXECUTION_TIME=30

# ===========================
# Production Settings
# ===========================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request rate limit per minute
REQUESTS_PER_MINUTE=60

# Enable CORS for API (true/false)
ENABLE_CORS=false

# Allowed CORS origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================
# Development Settings
# ===========================

# Enable debug mode (more verbose logging, detailed errors)
DEBUG=false

# Pretty print API responses (true/false)
PRETTY_PRINT_JSON=false
