# Streamlit Cloud Secrets Configuration
# Copy these settings to your Streamlit Cloud dashboard under "Secrets"
# DO NOT commit the actual secrets.toml file with real values!

# ===========================
# AI Configuration (Optional)
# ===========================

# Option 1: OpenAI (Cloud AI - Costs Money)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY = "sk-your-actual-openai-key-here"

# AI Provider: "openai" (cloud, paid) or leave unset (no AI queries)
# Note: Ollama (FREE local AI) won't work on Streamlit Cloud
# AI_PROVIDER = "openai"

# AI Model to use (if using OpenAI)
# AI_MODEL = "gpt-4"

# ===========================
# Monitoring (Optional)
# ===========================

# Sentry DSN for error monitoring
# Get from: https://sentry.io
# SENTRY_DSN = "https://your_sentry_dsn@sentry.io/project_id"

# ===========================
# Application Settings
# ===========================

# Environment setting
ENVIRONMENT = "production"

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL = "INFO"

# Cache TTL in hours (24 = refresh daily)
CACHE_TTL_HOURS = "24"

# ===========================
# Performance Settings
# ===========================

# Enable query timing logs
ENABLE_TIMING_LOGS = "true"

# Enable AI code security validation
ENABLE_AI_SECURITY_CHECKS = "true"

# Maximum AI code execution time in seconds
MAX_AI_EXECUTION_TIME = "30"
