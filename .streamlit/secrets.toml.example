# Streamlit Cloud Secrets Configuration
# Copy these settings to your Streamlit Cloud dashboard under "Secrets"
# DO NOT commit the actual secrets.toml file with real values!

# ===========================
# GitHub Issue Reporting (Optional)
# ===========================

# Enables automatic GitHub issue creation from user feedback
# To enable:
# 1. Go to: https://github.com/settings/tokens
# 2. Generate new token (classic)
# 3. Select scope: "public_repo" (for public repos) or "repo" (for private repos)
# 4. Copy token below
# GITHUB_TOKEN = "ghp_your_github_personal_access_token_here"

# GitHub repository details (update if you forked the repo)
# GITHUB_REPO_OWNER = "jeffbecraft"
# GITHUB_REPO_NAME = "VibeCoding_BaseballAnalysis"

# ===========================
# AI Configuration (Optional)
# ===========================

# Option 1: Google Gemini (Cloud AI - FREE TIER AVAILABLE!) ‚≠ê RECOMMENDED
# Get your free key from: https://makersuite.google.com/app/apikey
# Free tier: 15 requests/minute, 1500/day - More than enough for most usage!
# No credit card required for free tier
# GEMINI_API_KEY = "AIzaSyYour_Gemini_API_Key_Here"

# Option 2: OpenAI (Cloud AI - Costs Money)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY = "sk-your-actual-openai-key-here"

# AI Provider: "gemini" (free tier), "openai" (paid), or "auto" (tries free options first)
# Note: Ollama (FREE local AI) won't work on Streamlit Cloud but works great locally
# AI_PROVIDER = "gemini"

# AI Model to use:
# For Gemini: "gemini-1.5-flash" (fast, free), "gemini-1.5-pro" (powerful)
# Note: The app automatically maps these to v1beta API compatible versions
# For OpenAI: "gpt-4", "gpt-3.5-turbo"
# AI_MODEL = "gemini-1.5-flash"

# ===========================
# Google Cloud Secret Manager (Optional, Advanced)
# ===========================

# If you want to store your Gemini API key in GCP Secret Manager instead:
# 1. Create secret in GCP: gcloud secrets create gemini-api-key --data-file=- < your_key.txt
# 2. Set your GCP project ID here (the code will auto-fetch the key)
# GCP_PROJECT = "your-gcp-project-id"

# The app will try to fetch secrets in this order:
# 1. Google Cloud Secret Manager (if GCP_PROJECT is set)
# 2. Streamlit Cloud Secrets (these settings)
# 3. Environment variables
# 4. Local Ollama (FREE, works locally)

# ===========================
# Monitoring (Optional)
# ===========================

# Sentry DSN for error monitoring
# Get from: https://sentry.io
# SENTRY_DSN = "https://your_sentry_dsn@sentry.io/project_id"

# ===========================
# Application Settings
# ===========================

# Environment setting
ENVIRONMENT = "production"

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL = "INFO"

# Cache TTL in hours (24 = refresh daily)
CACHE_TTL_HOURS = "24"

# ===========================
# Performance Settings
# ===========================

# Enable query timing logs
ENABLE_TIMING_LOGS = "true"

# Enable AI code security validation
ENABLE_AI_SECURITY_CHECKS = "true"

# Maximum AI code execution time in seconds
MAX_AI_EXECUTION_TIME = "30"
